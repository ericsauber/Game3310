<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ericsauber.game3310.Settingspref"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/settingsimage"
            android:layout_width="387dp"
            android:layout_height="640dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/memmouse3"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="-24dp" />

        <TextView
            android:id="@+id/Settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Highscores"
            android:textSize="30sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="89dp" />

        <Button
            android:id="@+id/setting_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changemusic"
            android:text="Sound ON/OFF"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="130dp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/Settings_title" />
        <Button
            android:id="@+id/setting_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout/login"
            android:onClick="changelogout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="130dp"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_music" />
        <Button
            android:id="@+id/setting_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoMain"
            android:text="Main Menu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_logout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.076" />
</android.support.constraint.ConstraintLayout>