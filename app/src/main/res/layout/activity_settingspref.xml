<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ericsauber.game3310.Settingspref"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/settingsimage"
            android:layout_width="387dp"
            android:layout_height="640dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/memmouse3"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-23dp" />

    <TextView
        android:id="@+id/Settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="92dp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="25"
        android:shadowDy="25"
        android:text="Highscores"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/setting_music"
            android:layout_width="177dp"
            android:layout_height="63dp"
            android:onClick="changemusic"
            android:text="Change Password"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_logout" />
        <Button
            android:id="@+id/setting_logout"
            android:layout_width="141dp"
            android:layout_height="57dp"
            android:text="Logout/login"
            android:onClick="changelogout"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/Settings_title"
            app:layout_constraintHorizontal_bias="0.502" />
        <Button
            android:id="@+id/setting_main"
            android:layout_width="106dp"
            android:layout_height="53dp"
            android:onClick="gotoMain"
            android:text="Main Menu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_music"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/settingsimage"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.016" />
</android.support.constraint.ConstraintLayout>