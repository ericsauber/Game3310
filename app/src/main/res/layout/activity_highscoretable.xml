<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ericsauber.game3310.HighscoreTable"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="387dp"
            android:layout_height="640dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/memmouse3"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-22dp" />

        <TextView
            android:id="@+id/DBtest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="88dp"
            android:shadowColor="@android:color/darker_gray"
            android:text="Highscores"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView26"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"/>

        <Button
            android:id="@+id/DBtest_mainmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gotoMain"
            android:text="Main Menu"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            tools:layout_editor_absoluteX="141dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView26"
            android:layout_marginBottom="52dp" />


        <ListView
            android:id="@+id/listscore"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:textFilterEnabled="true"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DBtest_text"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/DBtest_mainmenu" />

        <ListView
            android:id="@+id/listsname"
            style="@style/Widget.AppCompat.ListView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:textFilterEnabled="true"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/DBtest_mainmenu"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/DBtest_text" />
</android.support.constraint.ConstraintLayout>