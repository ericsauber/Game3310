<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ericsauber.game3310.Main">

    <Button
        android:id="@+id/Main_tutorial"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:text="Tutorial"
        android:onClick="gotoTutorial1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@+id/Main_databasetest" />

    <Button
        android:id="@+id/Main_playgame"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:text="Play Game"
        android:onClick="gotoLevel1a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Main_highscores" />

    <Button
        android:id="@+id/Main_databasetest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database Test"
        android:onClick="gotoHighscoreTable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="240dp" />

    <Button
        android:id="@+id/Main_highscores"
        android:layout_width="133dp"
        android:layout_height="46dp"
        android:layout_marginTop="0dp"
        android:onClick="gotoHighscoreTable"
        android:text="High Scores"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_tutorial" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/memmousemain" />

</android.support.constraint.ConstraintLayout>
