<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ericsauber.game3310.Main">


    <Button
        android:id="@+id/Main_databasetest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Database Test"
        android:onClick="gotoHighscoreTable"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="240dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/memmousemain"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/Main_playgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="gotoLevel1a"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/playgame1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="94dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/highscores1"
        android:background="@null"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/Main_playgame" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/tutorial1"
        android:onClick="gotoTutorial1"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton" />

</android.support.constraint.ConstraintLayout>
